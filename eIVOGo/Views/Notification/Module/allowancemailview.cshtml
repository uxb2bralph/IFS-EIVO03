

@using System.Linq
@using System.IO
@using System.Linq.Expressions

@using Newtonsoft.Json
@using eIVOGo.Controllers
@using eIVOGo.Helper
@using eIVOGo.Models
@using eIVOGo.Models.ViewModel
@using Model.Models.ViewModel
@using Model.DataEntity
@using Model.Helper
@using Model.Locale
@using Utility
@using Uxnet.Web.WebUI
@{

    ModelSource<InvoiceItem> models;
    InvoiceAllowance _model;
    DocumentQueryViewModel _viewModel;

    models = ((SampleController<InvoiceItem>)ViewContext.Controller).DataSource;
    _model = (InvoiceAllowance)this.Model;
    _viewModel = (DocumentQueryViewModel)ViewBag.ViewModel;
}
@{ Html.RenderPartial("~/Views/DataView/Module/Allowance.cshtml", _model);}

@if (_model.InvoiceAllowanceSeller.Organization.OrganizationExtension?.CustomNotification != null)
{
    <text>
        @Html.Raw(_model.InvoiceAllowanceSeller.Organization.OrganizationExtension?.CustomNotification)
    </text>
}
else
{
    Html.RenderPartial("~/Views/Notification/Shared/ServiceNotation.cshtml", _model.InvoiceAllowanceSeller.Organization);
}
