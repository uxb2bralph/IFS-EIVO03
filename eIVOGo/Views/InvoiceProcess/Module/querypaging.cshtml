@using System.IO
@using System.Linq.Expressions

@using eIVOGo.Helper
@using eIVOGo.Models
@using eIVOGo.Models.ViewModel
@using Model.Models.ViewModel
@using eIVOGo.Controllers
@using Model.DataEntity
@using Model.Helper
@using Model.Locale
@using Utility
@using Uxnet.Web.WebUI
@{

    ModelSource<InvoiceItem> models;
    IQueryable<InvoiceItem> _model;
    InquireInvoiceViewModel _viewModel;



    models = ((SampleController<InvoiceItem>)ViewContext.Controller).DataSource;
    _viewModel = (InquireInvoiceViewModel)ViewBag.ViewModel;

    _model = (IQueryable<InvoiceItem>)this.Model;
}
@{
    var recordCount = _model.Count();
    if (recordCount > 0)
    {
        Html.RenderPartial("~/Views/InvoiceProcess/DataQuery/InvoiceQueryTable.cshtml", _model);

        <input type="hidden" name="pageIndex" />
        <nav aria-label="Page navigation">
            <ul class="pagination" id="itemPagination"></ul>
        </nav>
        <script>
        $(function () {
            var obj = $('#itemPagination').twbsPagination({
                totalPages: @((recordCount + _viewModel.PageSize - 1) / _viewModel.PageSize),
                        totalRecordCount: @(recordCount),
                        visiblePages: 10,
                        first: '最前',
                        prev: '上頁',
                        next: '下頁',
                        last: '最後',
                        initiateStartPageClick: false,
                        onPageClick: function (event, page) {
                            uiInvoiceQuery.inquire(page);
                        }
                    });
                });
        </script>
    }
}





