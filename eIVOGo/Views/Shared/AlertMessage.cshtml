@{
    String _message;
    _message = (this.Model as String) ?? ViewBag.Message ?? ViewBag.AlertMessage ?? Request["Message"];
}

@if (_message != null)
{
    <script>
        alert('@(HttpUtility.JavaScriptStringEncode(_message))');
        @if (ViewBag.CloseWindow == true)
        {
            <text>window.close();</text>
        }
    </script>
}
