                </p>
            </div>
            <div class="customer">
                <p>
                    @(_buyer.PostCode)<br />
                    @(_buyer.Address)<br />
                    @(_model.InvoiceSeller.ReceiptNo == "27934855" && _buyer.CustomerName != _buyer.ContactName
                        ? _buyer.CustomerName + "  " + _buyer.ContactName
                        : _buyer.ContactName)@*@(_buyer.ContactName)*@
